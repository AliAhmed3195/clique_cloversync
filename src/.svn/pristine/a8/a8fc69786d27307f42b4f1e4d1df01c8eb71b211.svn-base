                <md-input-container flex="50">
                    <label>Interval</label>
                    <md-select 
                    name="recurring_interval"
                    placeholder="Interval" 
                    ng-model="Recurring.Interval.Mode" 
                    
                    >
                    <md-option 
                    ng-value="interval.value" 
                    ng-repeat="interval in intervals">{{interval.name}}
                    </md-option>

                    </md-select>
                </md-input-container>

                <!-- Daily Drop Down Vales-->
